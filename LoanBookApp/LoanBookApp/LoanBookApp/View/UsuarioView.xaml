<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoanBookApp.View.UsuarioView">
    <ContentPage.Content>
        <StackLayout>
			<Label Text="Nome" Style="{StaticResource LblDefault}"/>
	        <Entry Text="{Binding Nome}" />
			<Label Text="Telefone" Style="{StaticResource LblDefault}"/>
	        <Entry Text="{Binding Telefone}" />
			<Label Text="Endereço" Style="{StaticResource LblDefault}"/>
	        <Entry Text="{Binding Endereco}" />
	        <StackLayout Orientation="Horizontal">
		        <Label Text="{Binding Usuarios}" Style="{StaticResource LblDefault}" VerticalTextAlignment="Center" />
		        <Button Text="Ver Livros" Command="{Binding AbrirLivros}" Style="{StaticResource BtnDefault}" VerticalOptions="End"/>
	        </StackLayout>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>