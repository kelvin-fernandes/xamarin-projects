<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoanBookApp.View.MainView" 
             BackgroundColor="#2382aa">
    <ContentPage.Content>
		<StackLayout  VerticalOptions="Center" HorizontalOptions="Center" Orientation="Horizontal">
			<Button Text="Usuários" Command="{Binding MostrarUsuarios}" Style="{StaticResource BtnMainView}" />
			<Button Text="Livros" Command="{Binding MostrarLivros}" Style="{StaticResource BtnMainView}" />
		</StackLayout>
    </ContentPage.Content>
</ContentPage>