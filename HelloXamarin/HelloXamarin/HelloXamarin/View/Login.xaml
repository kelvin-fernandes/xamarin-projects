<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloXamarin.View.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login!" TextColor="Red" />
            <Entry x:Name="txtLogin" Placeholder="Login" />
            <Label Text="Senha"/>
            <Entry x:Name="txtSenha" IsPassword="True"/>
            <Label x:Name="lblResult"/>
            <Button x:Name="btnExecutar" Text="Executar" BackgroundColor="Black" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>